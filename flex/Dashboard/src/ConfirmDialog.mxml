<?xml version="1.0"?>
<mx:Box 
    xmlns:mx="http://www.adobe.com/2006/mxml" 
    xmlns:local="*"
    styleName="roundedBox" 
    filters="{[new GlowFilter(0x000000, 0.25, 10, 10)]}"
    >
        
    <mx:Script source="defs.as" />

    
    <mx:Script>    
        <![CDATA[       
            import mx.managers.PopUpManager;
                 
            [Bindable] public var message:String = "";
            [Bindable] public var callback:Function = null;
            
            private function okAction():void {
                if (callback !== null)
                    callback(true);                    
                PopUpManager.removePopUp(this);
            }
            
            private function cancelAction():void {
                if (callback !== null)
                    callback(false);
                PopUpManager.removePopUp(this);
            }           
        ]]>
    </mx:Script>

    <mx:VBox horizontalAlign="center">
        <mx:Text width="500" height="100%"            
            textAlign="center"
            text="{message}"
            fontSize="30"
            paddingTop="40"
            paddingBottom="40"
            />
        
        <mx:HBox width="100%" horizontalAlign="center">
            <local:StretchButton
                height="100"
                label="{_('Yes')}"
                click="okAction()"
                />
            <mx:Spacer width="20" />
            <local:StretchButton
                height="100"
                label="{_('Cancel')}"
                click="cancelAction()"
                />
        </mx:HBox>
    </mx:VBox> 
</mx:Box>
